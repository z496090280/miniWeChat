.redBox{
    position: absolute;
    box-sizing: border-box;
    z-index: 99;
    height: 146rpx;
    width: 90%;
    overflow: hidden;
    /* background: #DE2F0B; */
    border-radius: 16rpx;
    font-size: 28rpx;
    bottom: 34rpx;
    left: 35rpx;
    color: #fff;
    padding-top: 10rpx;
    padding-left: 30rpx;
}
.redBox .des{
    font-size: 24rpx;
}
.redBox .left{
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    float: left;
}
.redBox .left image{
    width: 100%;
    height: 100%;
    object-fit:cover;
}
.redBox .right{
    float: left;
    margin-left: 32rpx;
}
.redBox .right view{
    margin-top: 20rpx;
}

.imageBanner_small {
    transform: scale(0.93);
    transition: 0.2s, ease-in 0s;
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: -16rpx;
    z-index: 100;
    padding: 0;
    line-height: 100%;
    background: transparent;
    text-align: left;
}
